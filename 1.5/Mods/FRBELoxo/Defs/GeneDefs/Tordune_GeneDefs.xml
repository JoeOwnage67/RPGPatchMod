			<!--<HediffGiver>
      			<hediff>Joe_ObstructedVision</hediff>
				<always>True</always>
    		</HediffGiver> -->
			
			<!--<HediffGiver_Constant>
      			<hediff>Joe_ObstructedVision</hediff>
    		</HediffGiver_Constant> -->
						
